<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="ContentDescription, HardcodedText" >

   	<TextView
   		android:id="@+id/C2R_textView1"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_centerHorizontal="true"
     	android:layout_alignParentTop="true"
     	android:text="Color to Resistance"
     	android:textColor="#FFFFFF"
     	android:textSize="22sp"
     	android:typeface="monospace" />
   	
    <View 
        android:id="@+id/C2R_center_marker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />
    
    <ImageView
        android:id="@+id/C2R_image_emptyresistor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/C2R_text_selectprompt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resistor_blank" />
    <ImageView
        android:id="@+id/C2R_image_colorband1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/C2R_text_selectprompt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/band1" />
    <ImageView
        android:id="@+id/C2R_image_colorband2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/C2R_text_selectprompt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/band2" />
    <ImageView
        android:id="@+id/C2R_image_colorband3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/C2R_text_selectprompt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/band3" />
    <ImageView
        android:id="@+id/C2R_image_colorband4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/C2R_text_selectprompt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/band4" />

    <TextView
        android:id="@+id/C2R_text_selectprompt"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/C2R_button_dot1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
       	android:text="Select Colors:"
       	android:textColor="#FFFFFF"
       	android:textSize="15sp"
       	android:typeface="monospace" />
        
	<Spinner
      	android:id="@+id/C2R_button_dot1"
       	android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignRight="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginRight="85dp"
       	android:background="@drawable/band1buttoncolor"
       	android:spinnerMode="dialog"
       	android:prompt="@string/colorband1" />     
    <Spinner
      	android:id="@+id/C2R_button_dot2"
       	android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignRight="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginRight="15dp"
       	android:background="@drawable/band2buttoncolor"
       	android:spinnerMode="dialog"
       	android:prompt="@string/colorband2" />      
	<Spinner
      	android:id="@+id/C2R_button_dot3"
       	android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignLeft="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginLeft="15dp"
       	android:background="@drawable/band3buttoncolor"
       	android:spinnerMode="dialog"
       	android:prompt="@string/colorband3" />
    <Spinner
      	android:id="@+id/C2R_button_dot4"
		android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignLeft="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginLeft="85dp"
       	android:background="@drawable/band4buttoncolor"
       	android:spinnerMode="dialog"
       	android:prompt="@string/colorband4" />
    <ImageView
        android:id="@+id/C2R_button_dot1_border"
		android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignRight="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginRight="85dp"
       	android:src="@drawable/circleborder" />
   	<ImageView
        android:id="@+id/C2R_button_dot2_border"
       	android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignRight="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginRight="15dp"
       	android:src="@drawable/circleborder" />
    <ImageView
        android:id="@+id/C2R_button_dot3_border"
        android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignLeft="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginLeft="15dp"
       	android:src="@drawable/circleborder" />
    <ImageView
        android:id="@+id/C2R_button_dot4_border"
        android:layout_width="40dp"
       	android:layout_height="40dp"
       	android:layout_alignLeft="@+id/C2R_center_marker"
       	android:layout_centerVertical="true"
       	android:layout_marginLeft="85dp"
       	android:src="@drawable/circleborder" />
    
	<TextView
	    android:id="@+id/C2R_text_button1"
       	android:layout_width="wrap_content"
       	android:layout_height="35dp"
       	android:layout_below="@+id/C2R_button_dot1"
       	android:layout_alignLeft="@+id/C2R_button_dot1"
       	android:layout_alignRight="@+id/C2R_button_dot1"
       	android:text="1"
     	android:textColor="#FFFFFF"
     	android:textSize="18sp"
     	android:typeface="monospace"
     	android:gravity="center" />
	<TextView
	    android:id="@+id/C2R_text_button2"
       	android:layout_width="wrap_content"
       	android:layout_height="35dp"
       	android:layout_below="@+id/C2R_button_dot2"
       	android:layout_alignLeft="@+id/C2R_button_dot2"
       	android:layout_alignRight="@+id/C2R_button_dot2"
       	android:text="2"
     	android:textColor="#FFFFFF"
     	android:textSize="18sp"
     	android:typeface="monospace"
     	android:gravity="center" />
	<TextView
	    android:id="@+id/C2R_text_button3"
       	android:layout_width="wrap_content"
       	android:layout_height="35dp"
       	android:layout_below="@+id/C2R_button_dot3"
       	android:layout_alignLeft="@+id/C2R_button_dot3"
       	android:layout_alignRight="@+id/C2R_button_dot3"
       	android:text="3"
     	android:textColor="#FFFFFF"
     	android:textSize="18sp"
     	android:typeface="monospace"
     	android:gravity="center" />
	<TextView
	    android:id="@+id/C2R_text_button4"
       	android:layout_width="wrap_content"
       	android:layout_height="35dp"
       	android:layout_below="@+id/C2R_button_dot4"
       	android:layout_alignLeft="@+id/C2R_button_dot4"
       	android:layout_alignRight="@+id/C2R_button_dot4"
       	android:text="4"
     	android:textColor="#FFFFFF"
     	android:textSize="18sp"
     	android:typeface="monospace"
     	android:gravity="center" />
	
    <TextView
        android:id="@+id/C2R_textview_result"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/C2R_image_emptyresistor"
        android:layout_alignRight="@+id/C2R_image_emptyresistor"
        android:layout_below="@+id/C2R_text_button1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/resultshape"
        android:text="Result"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace" />

	<Button
        android:id="@+id/C2R_button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/C2R_textview_result"
        android:layout_alignRight="@+id/C2R_center_marker"
        android:layout_below="@+id/C2R_textview_result"
        android:layout_marginTop="20dp"
		android:layout_marginRight="10dp"
        android:background="@drawable/calculateselector"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/C2R_button_reset"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/C2R_textview_result"
        android:layout_alignLeft="@+id/C2R_center_marker"
        android:layout_below="@+id/C2R_textview_result"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="10dp"
        android:background="@drawable/resetselector"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>