<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Choose Conversion:"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:typeface="monospace" />
    
    
    <Button
        android:id="@+id/menu_button_R2Cbutton"
        android:layout_centerHorizontal="true"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/menu_button_C2Rbutton"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Resistance to Color"
        android:textSize="30sp"
        android:background="@drawable/calculateselector" />
    
    <Button 
        android:id="@+id/menu_button_C2Rbutton"
        android:layout_centerInParent="true"
        android:layout_width="500dp"
        android:layout_height="100dp"
		android:background="@drawable/resetselector"
        android:text="Color to Resistance"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu_button_EQRbutton"
        android:layout_centerHorizontal="true"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@+id/menu_button_C2Rbutton"
        android:layout_marginTop="20dp"
        android:background="@drawable/eqrselector"
        android:text="Equivalent Resistance"
        android:textSize="30sp" 
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>